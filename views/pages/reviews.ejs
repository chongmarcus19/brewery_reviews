<div class="head">
  <h1>Brewery Reviews</h1>
</div>

<div>
<form class="form" action="/filter_reviews" method="get">
  <div class="row">
    <div class="col-3">

    </div>
    <div class="col-5">
      <input class="form-control" type="text" name="name" id = name placeholder="Enter Brewery Name">
    </div>
    <div class="col-1">
      <input class="btn btn-dark" type="submit" name="search" value = "Filter"/>
    </div>
      
  </div>

</form>
<table class="table table-bordered" >
  <tr>
    <th class="text-center" rowspan="1">Brewery</th>
    <th class="text-center"rowspan="1">Review</th>
    <th class="text-center" rowspan="1">Review Date</th>
  </tr>

  <%
  if (items) {
    var table = '';
    var i = 0;
    items.forEach(function(item){
      table += '<tr> <td>' + item.brewery_name + '</td> <td>' + item.review + '</td> <td>' + item.review_date + '</td></tr>';
    }); %>
  <%- table %>
  <% } %>

</table>

</div>
